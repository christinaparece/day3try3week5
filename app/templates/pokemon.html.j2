{% extends 'base.html.j2' %}

{% block title %}
Hi Pokemon
{% endblock %}

{% block content %}
    <h1>Pokemon</h1>


    <form action="/pokemon" method="POST" >  
    <div class="mb-3">
        <label for="pokemon" class="form-label">Pokemon Name</label>
        <input type="text" name="pokemon" class="form-control" id="name">
    </div> 

    <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    


    
     {% if pokemons %}  
        <table class="table table-striped table-hover">
        <thead>
            <tr>
            <th scope="col">Name</th>
            <th scope="col">Ability name</th>
            <th scope="col">Base Experience</th>
            <th scope="col">Sprite</th>
            </tr> 
        </thead>
        <tbody>
            {% for pokemon in pokemons %}
                <tr>
                    <th scope="row">{{pokemon.name}}</th>
                    <td>{{pokemon.ability_name}}</td>
                    <td>{{pokemon.base_experience}}</td>
                    <td>{{pokemon.sprite}}</td>      
                    
                </tr>
            {% endfor %}
        </tbody>
        </table>
    {% else %}
    
 {% endif %}  


{% endblock %}
